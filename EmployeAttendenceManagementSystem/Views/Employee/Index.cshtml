@model IEnumerable<EmployeAttendenceManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-primary">Employee Record</h1>
            <a class="btn btn-sm btn-success m-1" asp-controller="Employee" asp-action="Create"><i class="bi bi-plus-circle-fill"></i> Create</a>
            <p class="text-center text-success">@TempData["Error"]</p>
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>EmployeeId</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th colspan="2">Action</th>
                </tr>
                @foreach(var d in Model)
                {
                    <tr class="text-center">
                        <td>@d.EmployeeId</td>
                        <td>@d.Name</td>
                        <td>@d.Email</td>
                        <td>@d.Department</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-controller="Employee" asp-action="Edit"
                               asp-route-id="@d.EmployeeId"><i class="bi bi-arrow-repeat"></i> Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-danger" asp-controller="Employee" asp-action="Delete"
                               asp-route-id="@d.EmployeeId"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

