@model EmployeAttendenceManagementSystem.Models.Employee;
@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Edit Employee</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group mb-2">
                            <label asp-for="Name">Name</label>
                            <input type="hidden" asp-for="EmployeeId" />
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Employee Name" />
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Email">Email</label>
                            <input type="text" asp-for="Email" class="form-control" placeholder="Enter Your Email" />
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Department">Department</label>
                            <input type="text" asp-for="Department" class="form-control" placeholder="Enter Your Dept" />
                        </div>
                        <div class="form-group mb-2">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-right" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



